// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  firstName String?
  lastName  String?
  avatar    String?
  bio       String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  posts Post[]

  @@map("users")
}

model Post {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  coverImage  String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Foreign keys
  authorId String

  // Relations
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  tags   PostTag[]

  @@map("posts")
}

model Tag {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  color       String?  // Hex color code for the tag
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  posts PostTag[]

  @@map("tags")
}

model PostTag {
  id     String @id @default(cuid())
  postId String
  tagId  String

  // Relations
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([postId, tagId])
  @@map("post_tags")
}

model NewsletterSubscriber {
  id          String   @id @default(cuid())
  email       String   @unique
  subscribedAt DateTime @default(now())
  isActive    Boolean  @default(true)

  @@map("newsletter_subscribers")
}

model DocumentationProduct {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  published   Boolean  @default(false)
  sidebarPosition Int   @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  sections DocumentationSection[]

  @@map("documentation_products")
}

model DocumentationSection {
  id          String   @id @default(cuid())
  title       String
  slug        String
  description String?
  sidebarPosition Int   @default(0)
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Foreign keys
  productId String

  // Relations
  product DocumentationProduct @relation(fields: [productId], references: [id], onDelete: Cascade)
  pages   DocumentationPage[]

  @@unique([productId, slug])
  @@map("documentation_sections")
}

model DocumentationPage {
  id          String   @id @default(cuid())
  title       String
  slug        String
  content     String
  excerpt     String?
  sidebarPosition Int   @default(0)
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Foreign keys
  sectionId String

  // Relations
  section DocumentationSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([sectionId, slug])
  @@map("documentation_pages")
}